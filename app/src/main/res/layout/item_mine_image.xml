<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="3dp">

    <me.himanshusoni.chatmessageview.ChatMessageView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cmv_arrowGravity="start"
        app:cmv_arrowMargin="3dp"
        app:cmv_arrowPosition="right"
        app:cmv_backgroundColor="@color/colorPrimary"
        app:cmv_backgroundColorPressed="#ff00bcd4"
        app:cmv_contentPadding="5dp"
        app:cmv_cornerRadius="5dp"
        app:cmv_showArrow="true">

        <ImageView
            android:id="@+id/mine_image"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="#aaffffff"
            android:contentDescription="@string/app_name"
            android:src="@drawable/ic_user_placeholder" />

    </me.himanshusoni.chatmessageview.ChatMessageView>

    <TextView
        android:id="@+id/timestamp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:paddingStart="0dp"
        android:paddingEnd="8dp"
        android:textColor="@color/colorSecondaryText"
        android:textSize="12sp" />

</LinearLayout>